{
  "name": "raf-stub",
  "version": "1.0.1",
  "description": "Accurate and predictable testing of requestAnimationFrame and cancelAnimationFrame",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "dependencies": {
    "performance-now": "0.2.0"
  },
  "engines": {
    "node": "^6.7.0"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-transform-flow-strip-types": "6.21.0",
    "babel-preset-es2015": "6.18.0",
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "eslint": "3.12.1",
    "eslint-plugin-flowtype": "2.29.1",
    "flow-bin": "0.37.4",
    "isparta": "4.0.0",
    "mocha": "3.2.0",
    "sinon": "1.17.6",
    "yarn": "0.18.1"
  },
  "scripts": {
    "test": "yarn run lint && yarn run typecheck && yarn run test:fast",
    "test:fast": "mocha test --compilers js:babel-core/register",
    "typecheck": "flow check",
    "lint": "eslint src test -",
    "lint:fix": "yarn run lint --fix",
    "compile": "babel src --out-dir lib",
    "prepublish": "yarn run compile",
    "coverage": "isparta cover --include-all-sources node_modules/mocha/bin/_mocha -- test --compilers js:babel-core/register",
    "codecov": "yarn run coverage && codecov"
  },
  "keywords": [
    "raf",
    "requestAnimationFrame",
    "cancelAnimationFrame",
    "test",
    "testing",
    "mocha",
    "react-motion"
  ],
  "author": "Alex Reardon <alexreardon@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexreardon/raf-stub.git"
  }
}
